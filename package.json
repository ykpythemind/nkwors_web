{
  "scripts": {
    "dev": "parcel watch --out-dir tmp/dist js/index.tsx assets/images/**/* assets/javascripts/*.js assets/stylesheets/*.scss",
    "build": "parcel build --no-source-maps --out-dir tmp/dist js/index.tsx assets/images/**/* assets/javascripts/*.js assets/stylesheets/*.scss",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/webpack-env": "^1.13.9",
    "babel-core": "^6.26.3",
    "css-loader": "^1.0.1",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^8.1.0",
    "per-env": "^1.0.2",
    "preact-cli": "^2.2.1",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.15.3",
    "sass": "^1.17.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "typings-for-css-modules-loader": "^1.7.0",
    "@types/node": "^13.1.8"
  },
  "dependencies": {
    "@types/body-scroll-lock": "^2.6.1",
    "body-scroll-lock": "^2.6.1",
    "bootstrap": "4.3.1",
    "hamburgers": "^1.1.3",
    "normalize.css": "^8.0.1",
    "parcel-bundler": "^1.11.0",
    "preact": "^10.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.0.6",
    "preact-router": "^3.0.1"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  }
}
