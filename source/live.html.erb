---
title: Live
---

<div class="container">
  <% data.live.each do |l| %>
    <div class="live-outer">
      <div class="flex">
        <div class="date">
          <h3 class="h3"><%= live_date(l.date) %></h3>
          at <%= l.place %>
        </div>
        <div>
          <h3 class="title"><%= l.title %></h3>

          <% if l.img.present? %>
            <%= link_to("/images/live/#{l.img}") { image_tag "/images/live/#{l.img}", class: "image" } %>
          <% end %>

          <div>
            <%= l.text %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
