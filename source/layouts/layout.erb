<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title.present? ? "#{current_page.data.title} | 猫を堕ろすWeb" : "猫を堕ろすWeb" %></title>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body class="Site <%= page_classes %>">
    <main class="Site-content">
      <% if current_page.data.title.present? %>
        <h2><%= current_page.data.title %></h2>
      <% end %>

      <%= yield %>
    </main>


    <footer class="<%= page_classes %>">

      <div id="mobilemenu">
        <ul>
          <%= partial "menu" %>
        </ul>
      </div>

      <div class="footer-container">
        <div class="logo">
          <a href="/">
            <img src="/images/nkwors_black.png" alt="猫を堕ろす">
          </a>
        </div>
        <div class="menu">
          <ul class="menuinner">
            <%= partial "menu" %>
          </ul>
        </div>
        <div class="ham">


          <button class="hamburger hamburger--collapse" type="button" id="hambutton">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>
        </div>

      </div>




    </footer>
  </body>
</html>
