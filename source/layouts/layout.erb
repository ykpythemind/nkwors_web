<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="シニカルポップバンド・猫を堕ろすの公式サイト">
    <title><%= current_page.data.title.present? ? "#{current_page.data.title} | 猫を堕ろすWeb" : "猫を堕ろすWeb" %></title>
    <%= javascript_include_tag "js/index" %>
    <%= stylesheet_link_tag "js/index" %>

  </head>
  <body class="Site <%= page_classes %>">
    <div id="root">
      <main class="Site-content">
        <% if current_page.data.title.present? %>
          <div class="container">
            <center>
              <h2><%= current_page.data.title %></h2>
            </center>
          </div>
        <% end %>

        <%= yield %>
      </main>

      <% if content_for?(:top_info) %>
        <%= yield_content :top_info %>
      <% end %>

      <footer class="<%= page_classes %>">

        <div id="mobilemenu">
          <ul>
            <%= partial "menu" %>
          </ul>
        </div>

        <div class="footer-container">
          <div class="logo">
            <a href="/">
              <img src="/images/nkwors_black.png" alt="猫を堕ろす">
            </a>
          </div>
          <div class="menu">
            <ul class="menuinner">
              <%= partial "menu" %>
            </ul>
          </div>

          <div class="ham">
            <button class="hamburger hamburger--collapse" type="button" id="hambutton">
              <span class="hamburger-box">
                <span class="hamburger-inner"></span>
              </span>
            </button>
          </div>

        </div>
      </footer>
    </div>

    <noscript>JavaScriptを有効にして下さい</noscript>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-91239597-1', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>
